{
  "name": "Neutron",
  "version": "1.0.0",
  "description": "A live code editor just like codepen but as an application.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-packager . Neutron",
    "pack": "electron-builder --dir",
      "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/mac/icon.png --prune=true --out=release-builds",
     "package-win": "electron-packager . neturon --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Electron Tutorial App\"",    
     "package-linux": "electron-packager .  Neutron --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/linux/512x512.png --prune=true --out=release-builds"
  },
  "standard": {
    "ignore": [
      "/node_modules",
      "/build",
      "/dist",
      "/languages"
    ]
  },
  "author": "iamharsh.dev",
  "license": "MIT",
  "devDependencies": {
    "asar": "^2.0.1",
    "electron": "^6.0.12",
    "electron-builder": "^21.2.0",
    "electron-installer-debian": "^2.0.1",
    "electron-installer-snap": "^4.0.0",
    "electron-packager": "^14.0.6"
  },
  "dependencies": {
    "electron-create-menu": "^3.0.0",
    "electron-dl": "^1.14.0",
    "jquery": "^3.4.1",
    "mousetrap": "^1.6.3"
  },
  "build": {
    "appId": "com.electronlabs.neutron",
    "icon": "assets/mac/icon.png",
    "dmg": {
      "contents": [
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Development",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "assets/linux"
    },
    "directories":{"buildResources":"assets"},
    "files":["./assets/**"],
    "win": {
      "target": ["nsis"],
      "icon": "assets/win/icon.ico"
      
    }
  }
}


